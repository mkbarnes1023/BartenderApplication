@model IEnumerable<BartenderApplication.Models.Order>
@{
    ViewData["Title"] = "Order Queue";
}
<h2 class="mb-4">Order Queue</h2>

<div class="mb-3 text-end">
    <a asp-controller="CocktailOrder" asp-action="CompletedOrders" class="btn btn-outline-success">
        View Completed Cocktails
    </a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Order ID</th>
            <th>Cocktail</th>
            <th>Customer</th>
            <th>Quantity</th>
            <th>Time</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Cocktail.Name</td>
                <td>@order.CustomerName</td>
                <td>@order.Quantity</td>
                <td>@order.OrderTime.ToString("g")</td>
                <td>
                    <span class="badge bg-@(order.Status == "Ready" ? "success" : "warning")">@order.Status</span>
                </td>
                <td>
                    <form asp-action="SetPrepared" method="post" class="d-inline">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-sm btn-primary">Mark Completed</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
